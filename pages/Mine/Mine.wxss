/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 0rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(255, 165, 79);
  text-align: left;
  font-size: 34rpx;
}

.usermotto{
  margin-top: 10rpx;
  color: rgb(136, 136, 136);
  font-size: 24rpx;
}
.profile-wrapper, .account-wrapper {
    background-color: rgb(255, 255, 255);
    margin-bottom: 20rpx;
}

.profile, .account {
    display: flex;
    padding: 30rpx;
    align-items: center;
    flex-direction: row;
    border-bottom: 1rpx solid #f0f0f0;
}

.profile-item, .account-item {
    flex: 1;
    font-size: 30rpx;
}

.profile-arrow, .account-arrow {
    width: 32rpx;
    height: 32rpx;
}
.green{
  background: rgb(6, 81, 241) !important;
}
.bottom {
    border-radius: 80rpx;
    margin: 30rpx 50rpx;
    font-size: 35rpx;
    
     background: rgb(2, 187, 0);
}